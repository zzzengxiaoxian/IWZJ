<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        toolbar:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize18sp" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginTop="@dimen/margin_20dp"
            android:id="@+id/yjfk"
            style="@style/list_txt_Style"
            android:text="@string/yjfk" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/aboutus"
            style="@style/list_txt_Style"
            android:text="@string/aboutus" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:id="@+id/view_liuliang"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
            android:paddingBottom="10dp">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="16dp"
                android:text="使用流量"
                android:textColor="#000000"
                android:textSize="@dimen/textsize19sp" />


            <TextView
                android:id="@+id/syll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="2.66MB" />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />
        <TextView
            android:id="@+id/cleancash"
            style="@style/list_txt_Style_norightarro"
            android:text="@string/cleancash" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />


        <Button
            android:id="@+id/quiteaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quite"
            android:layout_margin="@dimen/margin_20dp"
            android:background="@color/red"
            android:textSize="@dimen/textsize18sp"
            android:textColor="@color/white_all"
            />
    </LinearLayout>


</LinearLayout>
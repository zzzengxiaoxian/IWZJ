<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dtdserviceitempic"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_80dp"
            android:layout_margin="@dimen/margin_5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:orientation="vertical">
            <!--android:ellipsize=”end”——省略号显示在结尾  "encyc..."
         android:singleLine="true"单行显示
         android:maxEms="10"最大的显示字数
            -->
            <TextView
                android:id="@+id/tv_dtdserviceItemTitlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text="放心保洁用ddddddasdfasddddddasdfe"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp">

                <TextView
                    android:id="@+id/tv_dtdserviceItemS_Area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingRight="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:singleLine="true"
                    android:text="范围大小低调低调的得到得到"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize18sp" />

                <ImageView
                    android:id="@+id/img_callphone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_phone_call" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_kiliometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/margin_5dp"
                android:text="15km"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize15sp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>